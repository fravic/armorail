package septenary.duelparty {    import septenary.duelparty.projectiles.*;    import flash.geom.Point;    import flash.display.Sprite;    public class ProjectileBurstFactory {		public static const CANNONBALL_TYPE:String = "Cannonball";        protected static var _burstGroupCallbacks:Array = new Array();        protected static var _freeBurstGroups:Array = new Array();        public static function createProjectileBurst(type:String, field:Sprite, startPt:Point, endPt:Point,                                                     callback:Function, callObj:Object=null):void {            var groupObj:Object = {callback:callback, callObj:callObj, numParts:1};            var proj:Projectile = new Projectile(field, startPt, endPt);            ProjectileBurstFactory["init" + type + "Projectile"](proj);            proj.group = groupObj;            GameEvent.addOneTimeEventListener(proj, GameEvent.PROJECTILE_DIED, projectileDiedHandler);            field.addChild(proj);            Singleton.get(GameBoard).addUpdateable(proj);        }        protected static function initCannonballProjectile(proj:Projectile):void {            const projSpeed:Number = 20;            var mvmt:ArcMovementBehaviour = new ArcMovementBehaviour();            mvmt.speed = projSpeed;            proj.movementBehaviour = mvmt;            proj.spriteClip = new Cannonball();			proj.deathClipClass = "CannonballDeath";        }        protected static function projectileDiedHandler(e:GameEvent):void {            var proj:Projectile = e.data as Projectile;            var data:Object = proj.group;            data.numParts--;            if (data.numParts <= 0) {                proj.parent.removeChild(proj);                Singleton.get(GameBoard).removeUpdateable(proj);				data.callObj != null ? data.callback(data.callObj) : data.callback();            }        }    }}