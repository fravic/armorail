package septenary.duelparty.pmovement {    import septenary.duelparty.Projectile;    import flash.geom.Point;    public class LinearMovementBehaviour implements MovementBehaviour {        protected var _speed:Number = 60;        public function get speed():Number {            return _speed;        }        public function set speed(value:Number):void {            _speed = value;        }        public function LinearMovementBehaviour() {        }        public function move(proj:Projectile):Object {            var curPt:Point = new Point(proj.x, proj.y);            var targPt:Point = proj.endPt;            var angle:Number = Math.atan2((targPt.y - curPt.y), (targPt.x - curPt.x));            var nextPt:Point = new Point(curPt.x + _speed * Math.cos(angle), curPt.y + _speed * Math.sin(angle));            var reachedEnd:Boolean = false;            if ((nextPt.x - proj.endPt.x) * (curPt.x - proj.endPt.x) < 0 ||                (nextPt.y - proj.endPt.y) * (curPt.y - proj.endPt.y) < 0) reachedEnd = true;            return {x:nextPt.x, y:nextPt.y, reachedEndPt:reachedEnd};        }    }}