package septenary.duelparty {    import flash.utils.Dictionary;    import flash.utils.getQualifiedClassName;    import flash.utils.getDefinitionByName;    public class Singleton {        private static var _singletonForClass:Dictionary = new Dictionary();        public static function init(instance:Object) {            var c:Class = getDefinitionByName(getQualifiedClassName(instance)) as Class;            Utilities.assert(_singletonForClass[c] == null, "Double instantiation of singleton " + c);            _singletonForClass[c] = instance;        }        public static function get(c:Class) {            if (_singletonForClass[c] == null) {                new c();                Utilities.assert(_singletonForClass[c] != null, "Constructor of " + c + " must call Singleton.init()!");            }            return _singletonForClass[c] as c;        }    }}